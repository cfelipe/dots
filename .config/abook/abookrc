set autosave=true

field manager="Manager"
field title="Title"

view CONTACT = name, email, title, manager
view PHONE = phone, workphone, mobile
view ADDRESS = address, address2, city, state, zip, country
view OTHER = nick, url

set preserve_fields=all

# Preserve any unknown field while loading an abook database
set preserve_fields=all

set show_all_emails=true

set index_format=" {name:32} {email:40} {phone:25|workphone|mobile} {title:30} {manager:22}"

set mutt_command=mutt

set sort_field=name

set add_email_prevent_duplicates=true

set www_command=lynx

# Address style [eu|us|uk]
set address_style=uk

# colors
set use_colors = true
set color_header_fg = red
set color_header_bg = default
set color_list_header_fg = blue
set color_list_header_bg = default
